<% if @book.errors.any? %>
  <div id="error_explanation" >
    <h3><%= @book.errors.count%>errors prohibited this obj from being saved:</h3><br>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li> <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class ="container px-5 px-sm-0">
  <div class="row">
    <%=render'users/list',user:@user,book:@book %>
    <div class ="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
      <therd>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan=3></th>
        </tr>
      </therd>
      <% @books.each do |book| %>
        <tbody>
          <tr>

            <td>
            <%= link_to user_path(book.user.id) do %>
            <%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg"%>
            <% end %>
            </td>

            <td>
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>

            <td>
              <%= book.body %>
            </td>

            <td>
              <% if current_user.already_liked?(book) %>
                <%= link_to book_likes_path(book), method: :delete do %>
                <i class="fas fa-heart"><%= book.likes.count %></i>
                <% end %>
              <% else %>
                <%= link_to book_likes_path(book), method: :post do %>
                <i class="far fa-heart"><%= book.likes.count %></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      <% end %>
     </table>
   </div>
 </div>
</div>