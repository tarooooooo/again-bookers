<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers" , root_path ,class: 'navbar-brand' %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class= "navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "Home", user_path(current_user.id) ,class: 'fas fa-home nav-link text-light' %>
                </li>
                <li>
                  <%= link_to "User" , users_path ,class: 'fas fa-users nav-link text-light' %>
                </li>
                <li>
                  <%= link_to "Books" , books_path , class: 'fas fa-book-open nav-link text-light' %>
                </li>
                <li>
                  <%= link_to "logout" , destroy_user_session_path, class: 'fas fa-sign-out-alt nav-link text-light' , method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to root_path , class: 'fas fa-home nav-link text-light' do %>Home<% end %>
                </li>
                <li>
                  <%= link_to home_about_path , class: 'fas fa-link nav-link text-light' do %>About<% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path , class: 'fas fa-user-plus nav-link text-light' do %>sign up<% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path , class: 'fas fa-sign-in-alt nav-link text-light' do %>login<% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p id="notice">
         <%= flash[:notice] %>
      </p>
      <%= yield %>
    </main>
    <footer>
      <div class = "container mt-5">
        <div class ="row">
          <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
